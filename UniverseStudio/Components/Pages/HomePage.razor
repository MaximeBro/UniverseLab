@page "/"
<PageTitle>UniverseStudio - Accueil</PageTitle>

<MudContainer Class="mt-8" MaxWidth="MaxWidth.ExtraLarge">
    <MudStack Row Spacing="0" Justify="Justify.Center">
        <MudText Class="text-white" Typo="Typo.h3" GutterBottom>Bienvenue sur</MudText>
        <MudText Class="gradient-title bold" Typo="Typo.h3">&nbsp;UniverseStudio</MudText>
        <MudText Class="text-white" Typo="Typo.h3" GutterBottom>!</MudText>
    </MudStack>
    
    <MudGrid Class="mt-12" Justify="Justify.Center">
        <MudItem xs="12">
            <MudText Class="text-white w700" Typo="Typo.h5" Align="Align.Center">API Exposées</MudText>
        </MudItem>
        <MudItem xs="12" md="8">
            <MudPaper Class="dark-bg rounded-md py-3 px-8" Elevation="5">
                <MudStack Row AlignItems="AlignItems.Center">
                    <MudText Class="text-white bold" Typo="Typo.h6">
                        Steam
                    </MudText>
                    <MudSpacer/>
                    <MudText Class="text-white bold">État</MudText>
                    <MudText Class="text-white bold">-</MudText>
                    <MudTooltip Text="@(_steamApiAvailable ? "En ligne" : "Hors ligne")" Placement="Placement.Top" Arrow>
                        <MudIcon Icon="@(_steamApiAvailable ? IconsF.SignalCellularAlt : IconsF.Warning)" Color="@(_steamApiAvailable ? Color.Success : Color.Error)"/>
                    </MudTooltip>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
    
    <MudGrid Class="mt-12" Justify="Justify.Center">
        <MudItem xs="12">
            <MudText Class="text-white w700" Typo="Typo.h5" Align="Align.Center">Applications hébergées</MudText>
        </MudItem>
        <MudItem xs="12" md="8">
            <MudPaper Class="dark-bg rounded-md py-3 pl-4 pr-8" Elevation="5">
                <MudStack Row AlignItems="AlignItems.Center">
                    <MudButton Class="clickable-app px-3" Href="https://scum.universestudio.net/" Target="_blank">
                        <MudText Class="gradient-title bold" Typo="Typo.h6">ScumDB</MudText>
                    </MudButton>
                    <MudText Class="text-white bold">v@(_scumAppVersion)</MudText>
                    <MudSpacer/>
                    <MudText Class="text-white bold">Status</MudText>
                    <MudText Class="text-white bold">-</MudText>
                    <MudTooltip Text="@(_scumAppAvailable ? "Opérationnel" : "En maintenance")" Placement="Placement.Top" Arrow>
                        <MudIcon Icon="@(_scumAppAvailable ? IconsF.SignalCellularAlt : IconsF.Update)" Color="@(_scumAppAvailable ? Color.Success : Color.Warning)"/>
                    </MudTooltip>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>