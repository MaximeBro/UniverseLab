@page "/"
@inherits AuthorizedComponentBase

<PageTitle>uDrive</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudBreadcrumbs Class="py-3" Items="@_breadcrumbItems" Separator="/"/>
        <MudContainer MaxWidth="MaxWidth.Large">
            <MudGrid Spacing="5" Justify="Justify.FlexStart">
                @foreach (var item in _items)
                {
                    <MudItem xs="6" sm="4" md="3" lg="3" xl="2">
                        <MudLink Underline="Underline.None" OnClick="() => { }">
                            <MudPaper Class="d-flex flex-row gap-2 darkless-bg pa-4 rounded-sm" Elevation="1"
                                      @onmouseenter="@(() => item.Hovered = true)"
                                      @onmouseleave="@(() => item.Hovered = false)">
                                <MudIcon Icon="@(item.Hovered ? item.IconHovered() : item.Icon())"/>
                                <MudText>@item.Name</MudText>
                            </MudPaper>
                        </MudLink>
                    </MudItem>
                }
            </MudGrid>
        </MudContainer>
    </Authorized>
</AuthorizeView>