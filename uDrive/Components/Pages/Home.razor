@page "/"
@inherits AuthorizedComponentBase

<PageTitle>uDrive</PageTitle>
<AuthorizeView>
    <Authorized>
        <MudBreadcrumbs Class="py-3" Items="@_breadcrumbItems" Separator="/"/>
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            <MudGrid Spacing="5" Justify="Justify.FlexStart">
                @foreach (var item in _items)
                {
                    <MudItem xs="6" sm="4" md="3" lg="2" xl="2">
                        <MudLink Underline="Underline.None" OnClick="() => { }">
                            <MudPaper Class="d-flex flex-row gap-2 background-800 pa-4 rounded-lg" Style="position: relative;" Elevation="5"
                                      @onmouseenter="@(() => item.Hovered = true)"
                                      @onmouseleave="@(() => item.Hovered = false)">
                                <MudIcon Icon="@(item.Hovered ? item.IconHovered() : item.Icon())" Style="@($"color: {item.Color}!important;")"/>
                                <MudText>@item.Name</MudText>
                                <MudSpacer/>
                                <InteractiveItemActionsMenu Item="@item"/>
                            </MudPaper>
                        </MudLink>
                    </MudItem>
                }
            </MudGrid>
        </MudContainer>
    </Authorized>
</AuthorizeView>