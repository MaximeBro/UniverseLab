@inherits ComponentBase

<MudStack Justify="@Justify" Class="@Class">
    <MudIconButton Class="@ButtonClass" Icon="@Icons.Filled.Close" Color="Color.Default" 
                   Size="Size.Small" Ripple="false" OnClick="@(() => Dialog.Close())" />
</MudStack>

@code {
    [Parameter]
    [Category(CategoryTypes.ComponentBase.Common)]
    public string? Class { get; set; }
    
    [Parameter]
    [Category(CategoryTypes.ComponentBase.Common)]
    public string? ButtonClass { get; set; }
    
    [Parameter]
    [Category(CategoryTypes.ComponentBase.Common)]
    public Justify Justify { get; set; } = Justify.FlexEnd;
    
    [Parameter]
    public MudDialogInstance Dialog { get; set; } = null!;
}