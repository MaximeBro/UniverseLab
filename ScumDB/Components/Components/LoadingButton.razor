@inherits MudButton

<MudButton OnClick="@OnClick" Disabled="@Disabled" Class="@Class" Style="@Style" Color="@Color" Variant="@Variant" Size="@Size" IconSize="@IconSize"
           StartIcon="@(!IsLoading ? StartIcon : null)" EndIcon="@(!IsLoading ? EndIcon : null)" IconColor="@IconColor" Href="@Href" Target="@Target" Rel="@Rel" Tag="@Tag" 
           Ripple="@Ripple" ClickPropagation="@ClickPropagation" DropShadow="@DropShadow" FullWidth="@FullWidth" IconClass="@IconClass" HtmlTag="@HtmlTag" UserAttributes="@UserAttributes"
           ButtonType="@ButtonType">
    @if (!IsLoading)
    {
        @ChildContent
    }
    else
    {
        <MudProgressCircular Indeterminate Color="@LoadingColor" Size="@LoadingIconSize"/>
    }
</MudButton>

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public Size LoadingIconSize { get; set; }
    [Parameter] public Color LoadingColor { get; set; }
}