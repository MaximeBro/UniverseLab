<MudOverlay Absolute DarkBackground @bind-Visible="IsVisible" LockScroll ZIndex="1400" AutoClose="false" Style="height: 100vh; width: 100%; overflow: hidden;">
    <MudStack Row="false" Color="Color.Default" Justify="Justify.Center" AlignItems="AlignItems.Center" Spacing="0">
        <MudStack Row AlignItems="AlignItems.Center" Spacing="0">
            <MudProgressCircular Class="z-9999" Indeterminate Color="Color.Default"/>
            <MudText Class="open-sans-600 ml-2 mr-3 z-9999" Align="Align.Center">Chargement en cours...</MudText>
        </MudStack>
        <MudText Class="open-sans-600 mt-2 z-9999" Color="Color.Default" Align="Align.Center" Style="font-weight: bold!important;">Ne rafraîchissez pas la page !</MudText>
    </MudStack>
</MudOverlay>

@code {
    [Parameter] public bool IsVisible { get; set; }
}