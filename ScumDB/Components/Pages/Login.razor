@page "/web/login"

<PageTitle>ScumDb - Connexion</PageTitle>

<MudStack Row Spacing="0" AlignItems="AlignItems.Center" Justify="Justify.Center" Class="pt-n16" Style="height: calc(100vh - 64px);">
    <MudPaper Class="py-6 px-8 dark-bg" Elevation="5">
        <MudStack Row="false">
            <MudText Class="text-white" Align="Align.Center" Typo="Typo.h4" Style="font-weight: bold;">Connexion</MudText>
            <EditForm Model="@_model" OnValidSubmit="@TryLogin">
                <DataAnnotationsValidator/>
                <MudTextField T="string" @bind-Value="_model.Identifier" Label="Identifiant" Variant="Variant.Filled"
                              Placeholder="nick.name" For="@(() => _model.Identifier)" Class="white-all mb-4" Style="min-width: 300px;" />

                <MudTextField T="string" @bind-Value="_model.Password" Label="Mot de passe" Variant="Variant.Filled"
                              Placeholder="Mdp compte admin US" For="@(() => _model.Password)" Class="white-all my-4" Style="min-width: 300px;"
                                  InputType="@PasswordInputType" Adornment="Adornment.End" AdornmentIcon="@PasswordIcon" OnAdornmentClick="@(() => _shown = !_shown)" />
                <MudStack Class="mt-2" Row Justify="Justify.Center">
                    <MudButton Class="text-white" ButtonType="ButtonType.Submit" Variant="Variant.Filled">Se connecter</MudButton>
                </MudStack>
            </EditForm>
        </MudStack>
    </MudPaper>
</MudStack>